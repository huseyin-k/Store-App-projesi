@model Entities.Dtos.ProductDtoForInsertion

<div class="text-center">
	<div class="display-6">Ekle</div>
</div>

<form method="post" asp-action="Create" enctype="multipart/form-data">

	<div class="text-danger" asp-validation-summary="All"></div>

	<div class="form-group my-3">
		<label asp-for="CategoryId">KategoriId</label>
		<select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId">
		</select>
	</div>

	<div class="form-group my-3">
		<label asp-for="ProductName">Ürün Adı</label>
		<input asp-for="ProductName" class="form-control" />
	</div>
	<div class="form-group my-3">
		<label asp-for="Summary">Özet</label>
		<input asp-for="Summary" class="form-control" />
	</div>

	<div class="form-group my-3">
		<label asp-for="Price">Fiyat</label>
		<input asp-for="Price" class="form-control" />
	</div>
	<div class="form-group my-3">
		<label asp-for="ImageUrl">ResimUrl</label>
		<input name="file" type="file" class="form-control" />
	</div>
	<div class="form-group my-3">
		<div class="btn-group">
			<button class="btn btn-primary" type="submit">
				<i class="fa fa-save"></i>
				kaydet
			</button>
			<a asp-action="Index" class="btn btn-outline-primary">
				<i class="fa fa-list"></i>
				ürünler
			</a>
		</div>
	</div>
</form>